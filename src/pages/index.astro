---
import Features from "@/components/features.astro";
import Hero from "@/components/hero.astro";
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Contactform from "@/components/contactform.astro";
import ScrollRevealImage from "@/components/ScrollRevealImage.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Sevilla Remodeling - Transforming Spaces with Excellence">
  <style>
    .corner-logo {
      position: fixed;
      top: 20px;
      left: 20px;
      z-index: 1000;
      animation: float 3s ease-in-out infinite;
    }
    
    @keyframes float {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }
    
    @media (max-width: 768px) {
      .corner-logo {
        top: 10px;
        left: 10px;
        width: 80px;
        height: 80px;
      }
    }
  </style>
  
  <div class="corner-logo">
    <img 
      src="/images/logo.png" 
      alt="Sevilla Remodeling Logo" 
      class="w-32 h-32 lg:w-40 lg:h-40"
    />
  </div>
  <!-- Hero Section (Full Width) -->
  <Hero />
  
  <!-- Services Section -->
  <Features />
  
  <!-- About Us Section -->
  <section class="py-16 bg-white">
    <Container>
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold mb-4 text-gray-800">About Us</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Transforming Spaces with Excellence
        </p>
      </div>
      
      <div class="flex flex-col lg:flex-row gap-12 items-center">
        <div class="lg:w-1/2 relative rounded-xl overflow-hidden shadow-xl">
          <img 
            src="https://images.unsplash.com/photo-1600880292203-757bb62b4baf?q=80&w=800&auto=format&fit=crop&h=500" 
            alt="Sevilla Remodeling Team" 
            class="w-full h-auto object-cover rounded-xl transform hover:scale-105 transition-transform duration-700"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent rounded-xl"></div>
          <div class="absolute bottom-0 left-0 p-8 text-white">
            <h3 class="text-2xl font-bold mb-2">Over 10 Years of Experience</h3>
            <p class="text-gray-200">Transforming homes with passion and dedication</p>
          </div>
        </div>
        
        <div class="lg:w-1/2">
          <p class="text-lg leading-relaxed text-slate-600 mb-6">
            At <span class="font-semibold text-blue-500">Sevilla Remodeling</span>, we take pride in being a family-owned business with years of experience in home improvements. Our mission is to turn your ideas into beautiful and functional spaces that exceed your expectations.
          </p>
          <p class="text-lg leading-relaxed text-slate-600 mb-8">
            We stand out for our attention to detail, quality craftsmanship, and commitment to customer satisfaction. Every project we undertake receives the same level of dedication and professionalism.
          </p>
          
          <div class="grid md:grid-cols-2 gap-6 mb-8">
            <div class="flex items-start">
              <div class="bg-blue-100 p-2 rounded-full mr-4 mt-1">
                <Icon name="mdi:shield-check" class="w-5 h-5 text-blue-600" />
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800 mb-1">Insured and Guaranteed</h3>
                <p class="text-gray-600 text-sm">Work backed by warranty</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-blue-100 p-2 rounded-full mr-4 mt-1">
                <Icon name="mdi:star" class="w-5 h-5 text-blue-600" />
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800 mb-1">Quality Materials</h3>
                <p class="text-gray-600 text-sm">We only work with the best brands</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-blue-100 p-2 rounded-full mr-4 mt-1">
                <Icon name="mdi:account-group" class="w-5 h-5 text-blue-600" />
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800 mb-1">Professional Team</h3>
                <p class="text-gray-600 text-sm">Highly trained experts</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-blue-100 p-2 rounded-full mr-4 mt-1">
                <Icon name="mdi:calendar-check" class="w-5 h-5 text-blue-600" />
              </div>
              <div>
                <h3 class="text-lg font-semibold text-gray-800 mb-1">Commitment to Deadlines</h3>
                <p class="text-gray-600 text-sm">We always deliver on time</p>
              </div>
            </div>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-4">
            <a 
              href="/about" 
              class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-500 hover:bg-blue-600 transition-colors"
            >
              Learn More
              <Icon name="mdi:arrow-right" class="ml-2 w-5 h-5" />
            </a>
            <a 
              href="/contact" 
              class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-blue-500 bg-white hover:bg-gray-50 transition-colors"
            >
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </Container>
  </section>
  
  <!-- Image Reveal Section -->
  <section class="py-16 bg-white">
    <Container>
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold mb-4 text-gray-800">Inspiring Designs</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          We transform ordinary spaces into extraordinary places
        </p>
      </div>
      
      <div class="max-w-6xl mx-auto">
        <ScrollRevealImage 
          imageUrl="https://images.unsplash.com/photo-1618221195710-dd6b41faaea6?q=80&w=1600&auto=format&fit=crop&h=600"
          altText="Interior minimalista moderno"
          height="600px"
        />
      </div>
      
      <div class="mt-12 text-center">
        <a 
          href="/services" 
          class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-500 hover:bg-blue-600 transition-colors"
        >
          See More of Our Work
          <Icon name="mdi:arrow-right" class="ml-2 w-5 h-5" />
        </a>
      </div>
    </Container>
  </section>

  <!-- Contact Section -->
  <section class="py-16 bg-gradient-to-b from-gray-50 to-white">
    <Container>
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold mb-4 text-gray-800">Contact Us</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          We're ready to make your remodeling projects a reality
        </p>
      </div>
      
      <div class="grid lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Call-to-action destacado -->
        <div class="lg:col-span-1">
          <div class="relative h-80 lg:h-full rounded-xl overflow-hidden shadow-xl bg-gradient-to-br from-blue-500 via-blue-600 to-blue-700">
            <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1581094794329-c8112a89af12?q=80&w=800&auto=format&fit=crop')] bg-cover bg-center opacity-20"></div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            <div class="relative h-full flex flex-col justify-end p-6 sm:p-8">
              <div class="text-white space-y-4">
                <h3 class="text-2xl lg:text-3xl font-bold leading-tight">
                  Ready to Get Started?
                </h3>
                <p class="text-blue-100 text-base lg:text-lg leading-relaxed">
                  Request a free consultation today and turn your vision into reality
                </p>
                <div class="pt-2">
                  <a 
                    href="/contact" 
                    class="inline-flex items-center gap-2 bg-white text-blue-600 hover:bg-blue-50 px-5 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg"
                  >
                    <Icon name="mdi:phone" class="w-5 h-5" />
                    Free Consultation
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- InformaciÃ³n de contacto -->
        <div class="lg:col-span-1 bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-2xl font-bold text-gray-800 mb-6">Contact Information</h3>
          
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="bg-blue-100 p-2 rounded-full mr-4 flex-shrink-0">
                <Icon name="mdi:map-marker" class="w-5 h-5 text-blue-600" />
              </div>
              <div>
                <h4 class="font-semibold text-gray-800">Address</h4>
                <p class="text-gray-600">123 Remodeling St, Orlando, FL 32801</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-blue-100 p-2 rounded-full mr-4 flex-shrink-0">
                <Icon name="mdi:phone" class="w-5 h-5 text-blue-600" />
              </div>
              <div>
                <h4 class="font-semibold text-gray-800">Phone</h4>
                <a href="tel:+14045551234" class="text-blue-500 hover:text-blue-600 transition-colors">+1 (404) 555-1234</a>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-blue-100 p-2 rounded-full mr-4 flex-shrink-0">
                <Icon name="mdi:email" class="w-5 h-5 text-blue-600" />
              </div>
              <div>
                <h4 class="font-semibold text-gray-800">Email</h4>
                <a href="mailto:info@sevillaremodeling.com" class="text-blue-500 hover:text-blue-600 transition-colors">sevillaremodeling504@gmail.com</a>
              </div>
            </div>
            
            <div class="pt-4 border-t border-gray-100">
              <h4 class="font-semibold text-gray-800 mb-3">Business Hours</h4>
              <ul class="space-y-2">
                <li class="flex justify-between">
                  <span class="text-gray-600">Monday - Friday</span>
                  <span class="font-medium">8:00 AM - 6:00 PM</span>
                </li>
                <li class="flex justify-between">
                  <span class="text-gray-600">Saturday</span>
                  <span class="font-medium">9:00 AM - 2:00 PM</span>
                </li>
                <li class="flex justify-between">
                  <span class="text-gray-600">Sunday</span>
                  <span class="font-medium">Closed</span>
                </li>
              </ul>
            </div>
            
            <div class="pt-4">
              <h4 class="font-semibold text-gray-800 mb-3">Follow Us</h4>
              <div class="flex space-x-4">
                <a href="#" class="text-gray-600 hover:text-blue-500 transition-colors">
                  <Icon name="mdi:facebook" class="w-6 h-6" />
                </a>
                <a href="#" class="text-gray-600 hover:text-blue-500 transition-colors">
                  <Icon name="mdi:instagram" class="w-6 h-6" />
                </a>
                <a href="#" class="text-gray-600 hover:text-blue-500 transition-colors">
                  <Icon name="mdi:youtube" class="w-6 h-6" />
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Formulario de contacto -->
        <div class="lg:col-span-1 bg-white p-8 rounded-xl shadow-lg">
          <h3 class="text-2xl font-bold text-gray-800 mb-6">Send Us a Message</h3>
          <Contactform />
          
          <div class="mt-6 pt-6 border-t border-gray-100">
            <h4 class="font-semibold text-gray-800 mb-3">Or contact us directly</h4>
            <div class="flex flex-col space-y-3">
              <a 
                href="https://wa.me/+12147173859" 
                target="_blank"
                class="flex items-center justify-center gap-2 bg-green-600 hover:bg-green-700 text-white py-3 px-4 rounded-lg transition-colors"
                rel="noopener"
              >
                <Icon name="mdi:whatsapp" class="w-5 h-5" />
                WhatsApp
              </a>
              <a 
                href="sms:+12147173859" 
                class="flex items-center justify-center gap-2 bg-blue-500 hover:bg-blue-600 text-white py-3 px-4 rounded-lg transition-colors"
                rel="noopener"
              >
                <Icon name="mdi:message" class="w-5 h-5" />
                iMessage
              </a>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>
</Layout>
