---
import Contactform_updated from "@/components/contactform_updated.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Link from "@/components/ui/link.astro";
---

<Layout title="Contact - Sevilla Remodeling">
  <Container>
    <!-- Semi-transparent white background container -->
    <div class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg p-8 md:p-12 border border-white/20">
      <Sectionhead>
        <Fragment slot="title">Contact Us</Fragment>
        <Fragment slot="desc">Request a free quote</Fragment>
      </Sectionhead>

      <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
        <div>
          <h2 class="font-medium text-2xl text-gray-800 mb-6">Get in Touch</h2>
          
          <!-- Contact Buttons -->
          <div class="flex flex-col gap-4 mb-8">
            <!-- WhatsApp Button -->
            <Link
              href="https://wa.me/+12147173859"
              target="_blank"
              class="flex gap-2 items-center justify-center bg-green-600 hover:bg-green-700 transition-colors w-full"
              rel="noopener">
              <Icon class="text-white w-5 h-5" name="mdi:whatsapp" />
              Contact us via WhatsApp
            </Link>
            
            <!-- iMessage Button -->
            <Link
              href="sms:+12147173859"
              class="flex gap-2 items-center justify-center bg-blue-500 hover:bg-blue-600 transition-colors w-full"
              rel="noopener">
              <Icon class="text-white w-5 h-5" name="mdi:message" />
              Contact us via iMessage
            </Link>
          </div>
          
          <div class="mt-5">
            <div class="flex items-center mt-2 space-x-2 text-gray-600">
              <Icon class="text-gray-600 w-5 h-5" name="mdi:map-marker" />
              <span>Dallas, TX Area</span>
            </div>
            <div class="flex items-center mt-2 space-x-2 text-gray-600">
              <Icon class="text-gray-600 w-5 h-5" name="mdi:email-outline" />
              <a href="mailto:sevillaremodeling504@gmail.com" class="hover:text-blue-500 transition-colors">sevillaremodeling504@gmail.com</a>
            </div>
            <div class="flex items-center mt-2 space-x-2 text-gray-600">
              <Icon class="text-gray-600 w-5 h-5" name="mdi:phone" />
              <a href="tel:+12147173859" class="hover:text-blue-500 transition-colors">+1 (214) 717-3859</a>
            </div>
          </div>
          
          <!-- Map -->
          <div class="mt-8 h-64 rounded-lg overflow-hidden shadow-md">
            <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d214587.14215977406!2d-96.87920739288483!3d32.82066536691976!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x864c19f77b45974b%3A0xb9ec9ba4f647678f!2sDallas%2C%20TX!5e0!3m2!1sen!2sus!4v1654321234567!5m2!1sen!2sus" 
              width="100%" 
              height="100%" 
              style="border:0;" 
              allowfullscreen="" 
              loading="lazy" 
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>
        </div>
        <div>
          <Contactform_updated />
        </div>
      </div>
    </div>
  </Container>
</Layout>
