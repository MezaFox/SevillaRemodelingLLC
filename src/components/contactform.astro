---
import Button from "./ui/button.astro";
---

<!-- To make this contact form work, create your free access key from https://web3forms.com/
     Then you will get all form submissions in your email inbox. -->
<form
  action="https://api.web3forms.com/submit"
  method="POST"
  class="bg-white/80 backdrop-blur-sm p-6 rounded-lg shadow-md border border-white/30">
  <h3 class="text-2xl font-semibold text-gray-800 mb-6">Get a Free Estimate</h3>
  
  <input type="hidden" name="access_key" value="YOUR_ACCESS_KEY_HERE" />
  <!-- Create your free access key from https://web3forms.com/ -->
  <input type="checkbox" class="hidden" style="display:none" name="botcheck" />
  
  <!-- Name Field -->
  <div class="mb-5">
    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
    <input
      id="name"
      type="text"
      placeholder="Your Name"
      required
      class="w-full px-4 py-3 border-2 placeholder:text-gray-500 rounded-md outline-none focus:ring-2 border-gray-300 focus:border-orange-500 focus:ring-orange-100"
      name="name"
    />
  </div>
  
  <!-- Email Field -->
  <div class="mb-5">
    <label for="email_address" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
    <input
      id="email_address"
      type="email"
      placeholder="your@email.com"
      name="email"
      required
      class="w-full px-4 py-3 border-2 placeholder:text-gray-500 rounded-md outline-none focus:ring-2 border-gray-300 focus:border-orange-500 focus:ring-orange-100"
    />
  </div>
  
  <!-- Phone Field -->
  <div class="mb-5">
    <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
    <input
      id="phone"
      type="tel"
      placeholder="(123) 456-7890"
      name="phone"
      class="w-full px-4 py-3 border-2 placeholder:text-gray-500 rounded-md outline-none focus:ring-2 border-gray-300 focus:border-orange-500 focus:ring-orange-100"
    />
  </div>
  
  <!-- Service Type Field -->
  <div class="mb-5">
    <label for="service" class="block text-sm font-medium text-gray-700 mb-1">Service Type</label>
    <select
      id="service"
      name="service"
      class="w-full px-4 py-3 border-2 rounded-md outline-none focus:ring-2 border-gray-300 focus:border-orange-500 focus:ring-orange-100">
      <option value="">Select a service</option>
      <option value="painting">Painting</option>
      <option value="remodeling">Remodeling</option>
      <option value="carpentry">Carpentry</option>
      <option value="landscaping">Landscaping</option>
      <option value="other">Other</option>
    </select>
  </div>
  
  <!-- Message Field -->
  <div class="mb-5">
    <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message *</label>
    <textarea
      id="message"
      name="message"
      required
      placeholder="Tell us about your project..."
      class="w-full px-4 py-3 border-2 placeholder:text-gray-500 rounded-md outline-none h-36 focus:ring-2 border-gray-300 focus:border-orange-500 focus:ring-orange-100"
    ></textarea>
  </div>
  
  <Button type="submit" size="lg" block class="bg-orange-500 hover:bg-orange-600 transition-colors w-full">
    Send Message
  </Button>
  
  <p class="text-sm text-gray-600 mt-3 text-center">
    We'll get back to you within 24 hours!
  </p>
</form>


