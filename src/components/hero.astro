---
import Link from "@/components/ui/link.astro";

// Importar íconos directamente para evitar dependencias innecesarias
const WhatsAppIcon = 'M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.891-11.893 11.891-1.99 0-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.532 3.462.802 5.27.8 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.088.663 4.127 1.912 5.801l-1.066 3.896 3.765-.984z';
const PhoneIcon = 'M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1v3.49c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z';
---

<main class="relative bg-gradient-to-b from-white to-gray-50">
  <!-- Hero Section -->
  <div class="w-full min-h-[80vh] relative overflow-hidden flex items-center">
    <!-- Fondo con imagen -->
    <div class="absolute inset-0 w-full h-full">
      <!-- Imagen optimizada -->
      <img
        src="/images/hero-remodelacion.jpg"
        alt="Proyecto de remodelación de interiores"
        class="w-full h-full object-cover object-center"
        loading="eager"
        width="1920"
        height="1080"
      />
      <!-- Overlay sutil -->
      <div class="absolute inset-0 bg-gradient-to-r from-white/80 via-white/50 to-transparent"></div>
    </div>
    
    <!-- Contenido del Hero -->
    <div class="container mx-auto px-4 relative z-10 py-20">
      <div class="max-w-2xl">
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-gray-800 mb-6 leading-[1.1] tracking-tight">
          Transforma Tus Espacios
        </h1>
        <p class="text-xl text-gray-700 mb-8 max-w-lg">
          Soluciones de remodelación personalizadas que combinan diseño, funcionalidad y calidad excepcional.
        </p>
        
        <!-- Botones de contacto -->
        <div class="flex flex-wrap gap-4 mb-8">
          <!-- WhatsApp -->
          <a 
            href="https://wa.me/+1234567890"
            target="_blank"
            class="flex items-center gap-2 bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg transition-all hover:shadow-lg hover:-translate-y-0.5"
            rel="noopener noreferrer">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d={WhatsAppIcon} />
            </svg>
            WhatsApp
          </a>
          
          <!-- Llamada -->
          <a 
            href="tel:+1234567890"
            class="flex items-center gap-2 bg-white text-gray-800 border border-gray-200 hover:bg-gray-50 px-6 py-3 rounded-lg transition-all hover:shadow-lg hover:-translate-y-0.5"
            rel="noopener noreferrer">
            <svg class="w-5 h-5 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
              <path d={PhoneIcon} />
            </svg>
            Llamar Ahora
          </a>
        </div>
        
        <!-- Botón de servicios -->
        <div class="inline-flex">
          <a 
            href="/services"
            class="group flex items-center gap-2 text-orange-600 hover:text-orange-700 font-medium transition-colors">
            Ver Nuestros Servicios
            <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Indicador de desplazamiento -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
    <div class="animate-bounce">
      <svg class="w-8 h-8 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>
</main>
