---
import { SEO } from "astro-seo";
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar/navbar.astro";
import BackgroundImages from "@/components/BackgroundImages.astro";
import "@fontsource/inter";
import "@fontsource/bricolage-grotesque";
import "../styles/global.css";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Sevilla Remodeling"
  : "Sevilla Remodeling - Transforming Spaces with Excellence";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <link rel="shortcut icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- AOS Animation - Temporarily disabled for debugging -->
    <!-- <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js" defer></script> -->

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Sevilla Remodeling offers expert home improvement services including painting, remodeling, carpentry, and landscaping in the Dallas area."
      canonical={canonicalURL}
      twitter={{
        creator: "@sevillaremodel",
        site: "@sevillaremodeling",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Sevilla Remodeling - Expert Home Improvement Services`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Sevilla Remodeling - Home Improvement Services",
        },
      }}
    />
  </head>
  <body class="services-page" style="min-height: 100vh; position: relative; overflow-x: hidden;">
    <!-- Imagen de fondo con overlay blanco degradado -->
    <div class="absolute inset-0 z-0">
      <img src="/images/backgrounds/home-bg.jpg" alt="" class="absolute inset-0 w-full h-full object-cover" style="opacity: 0.6;" />
      <div class="absolute inset-0" style="background: linear-gradient(to bottom, rgba(255, 255, 255, 0.75), rgba(255, 255, 255, 0.65));"></div>
    </div>
    <div class="relative z-10 min-h-screen flex flex-col text-gray-800">
      <Navbar />
      <main class="flex-grow">
        <slot />
      </main>
      <Footer class="mt-auto" />
    </div>
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }

      /* Estilos para la p√°gina completa - con !important para anular otros estilos */
      body.services-page {
        background-color: #ffffff !important; /* Fondo blanco puro */
        min-height: 100vh;
        position: relative;
      }
      
      /* Asegurarse de que el texto sea legible sobre el fondo blanco */
      body.services-page .text-gray-800 {
        color: #1f2937 !important;
      }
      
      /* Estilos para la imagen de fondo con overlay */
      body.services-page {
        background-color: #ffffff;
      }
      
      /* Asegurar que la imagen de fondo y el overlay se muestren correctamente */
      body.services-page .absolute.inset-0.z-0 {
        pointer-events: none;
      }
    </style>
  </body>
</html>
